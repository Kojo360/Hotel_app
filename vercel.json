{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python"
    },
    {
      "src": "build.sh",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "staticfiles"
      }
    }
  ],
  "routes": [
    { "src": "/static/(.*)", "headers": { "Cache-Control": "s-maxage=31536000, immutable" }, "dest": "staticfiles/$1" },
    { "src": "/media/(.*)", "dest": "media/$1" },
    { "src": "/(.*)", "dest": "api/index.py" }
  ],
  "env": {
    "PYTHONUNBUFFERED": "1",
    "DJANGO_SETTINGS_MODULE": "hotel_app.settings"
  }
}
